package com.usermanagement.repository;

import java.util.ArrayList;
import java.util.List;

import com.usermanagement.Model.User;

public class UserRepository {

	List<User> userList = new ArrayList<User>();
	public List<User> getAllUsers() {
		return userList;
	}
	public User getUser(String id) {
		
		return userList.stream().filter(use-> 
		id.equals(use.getId())).findFirst().orElse(new User());
	}
	public void addUser(User user) {
		userList.add(user);
		
	}
	public void updateUser(User user) {
		
		userList.stream() 
		   .filter(use -> use.getId().equals(user.getId())) 
		   .map(Language.NAME.setTo("German")) 
		   .forEach(languages.updater());
		
		
		userList.stream().filter(use->use.getId()
				.equals(user.getId()){
			});
		}
	

}
